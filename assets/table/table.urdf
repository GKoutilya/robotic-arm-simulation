<?xml version="1.0"?>
<robot name="simple_table">

  <!-- Tabletop -->
  <link name="tabletop">
    <visual>
      <geometry>
        <box size="0.6 1.0 0.05"/>
      </geometry>
      <material name="brown">
        <color rgba="0.545 0.271 0.075 1"/>
      </material>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.6 1.0 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
  </link>

  <!-- Leg Template -->
  <!-- Each leg will be a child of the tabletop and attached with a fixed joint -->

  <!-- Front Left Leg -->
  <link name="leg_fl">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.6"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.05 0.05 0.6"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>
  <joint name="joint_fl" type="fixed">
    <parent link="tabletop"/>
    <child link="leg_fl"/>
    <origin xyz="-0.25 -0.45 -0.325" rpy="0 0 0"/>
  </joint>

  <!-- Front Right Leg -->
  <link name="leg_fr">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.6"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.05 0.05 0.6"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>
  <joint name="joint_fr" type="fixed">
    <parent link="tabletop"/>
    <child link="leg_fr"/>
    <origin xyz="0.25 -0.45 -0.325" rpy="0 0 0"/>
  </joint>

  <!-- Back Left Leg -->
  <link name="leg_bl">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.6"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.05 0.05 0.6"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>
  <joint name="joint_bl" type="fixed">
    <parent link="tabletop"/>
    <child link="leg_bl"/>
    <origin xyz="-0.25 0.45 -0.325" rpy="0 0 0"/>
  </joint>

  <!-- Back Right Leg -->
  <link name="leg_br">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.6"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.05 0.05 0.6"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>
  <joint name="joint_br" type="fixed">
    <parent link="tabletop"/>
    <child link="leg_br"/>
    <origin xyz="0.25 0.45 -0.325" rpy="0 0 0"/>
  </joint>

</robot>
